% Table Header
\newcommand{\tableheader}[1]{{
  \par\vspace*{8pt}
  \noindent
  \pfTableTitleFont
  #1}}

\newcommand{\header}[1]{%
  \textbf{\cellcolor{tabletitlebg}\color{tabletitlefg}{#1}}%
}

\makeatletter
\newenvironment{tablehere}
  {\def\@captype{table}}
  {}
\makeatother

