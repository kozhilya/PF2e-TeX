% Table Environment
\newenvironment{pf-table}[2][]{
  % \par\vspace*{8pt}
  \noindent
  \tablehere

  \ifthenelse{\equal{#1}{}}
    {}% empty
    { \captionsetup{margin=0pt,
                justification=raggedright,
                format=plain,
                singlelinecheck=false,
                font={pf@CaptionFont,
                  color=tablecaption}}
      \caption{#1}}% not empty

  \pfTableBodyFont
  \rowcolors{1}{tablecolor2}{tablecolor1} % Alternate colors
  \noindent
  \tabularx{\linewidth}{#2}
}{
  \endtabularx
  \endtablehere
  % \vspace{8pt plus 1pt}
  % \noindent
}

\newenvironment{pf-table*}[2][]{
  \table

  \noindent
    \ifthenelse{\isempty{#1}}
    {}% empty
    { \captionsetup{margin=0pt,
                    justification=raggedright,
                    format=plain,
                    singlelinecheck=false,
                    font={pf@CaptionFont,
                      color=tablecaption}}
      \caption{#1}}% not empty

  \pfTableBodyFont
  \rowcolors{1}{tablecolor2}{tablecolor1} % Alternate colors
  \tabularx{\textwidth}{#2}
}{
  \endtabularx
  \endtable
}

