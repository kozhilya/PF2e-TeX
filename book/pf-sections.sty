% Part splash page

\newkeycommand\pfMakeSplashHeader[
  image=,
  title=Title,
  headerHeight=headerHeight,
  textBodyHeight=textBodyHeight  
]{
  \begin{figure*}[h]
    \iftoggle{side-toc}{
      \ifnumodd{\thepage}{
        \vspace*{-0.8cm}
        \hspace*{-2.2cm}
        \def\splashWidth{\paperwidth-\sidetocwidth}
      }{
        \vspace*{-0.8cm}
        \hspace*{-1.5cm}
        \def\splashWidth{\paperwidth-2.7cm}
      }
    }{
      \vspace*{-1.5cm}
      \hspace*{-1.5cm}
      \def\splashWidth{\paperwidth}
    }
    \makebox[\splashWidth][c]{
      \includegraphics[width=\splashWidth,height=15cm,keepaspectratio]{\commandkey{image}}
    }
  \end{figure*}

  \begin{center}
    % You may need to adjust this vspace to make sure the title looks good with your image aspect ratio/pixels
    \vspace*{\commandkey{headerHeight}}
    \prociono%
    \fontsize{48pt}{48pt}
    \selectfont
    \fillstroke{[1]}{[0]}{1.5}{\MakeUppercase{\commandkey{title}}}
    \normalfont\normalsize
  \end{center}
  % You might need to adjust the vspace based on the aspect ratio/pixels of your splash image
  \vspace{\commandkey{textBodyHeight}}
}

